{
  "pyright.enable": true,
  "python.venvPath": "~/.virtualenvs",
  "python.linting.enabled": false,
  "python.disableDiagnostics": true,
  "python.disableCompletion": false,
  "diagnostic.displayByAle": true,
  "languageserver": {
    "godot": {
      "host": "127.0.0.1",
      "filetypes": ["gdscript"],
      "port": 6008
    },
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": [
        ".stack.yaml",
        ".hie-bios",
        "BUILD.bazel",
        "cabal.config",
        "package.yaml"
      ],
      "filetypes": ["hs", "lhs", "haskell"]
    }
  }
}
